/**
 * Edit Ingredient Nutrition Style
 * Makes the edit ingredient form match the detailed nutrition panel style
 */

/* Basic Information section styling to match nutrition sections */
.edit-ingredient-form .basic-information {
    margin-bottom: 15px !important;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1) !important;
    padding-bottom: 10px !important;
}

.edit-ingredient-form .basic-information h4 {
    margin-top: 0 !important;
    margin-bottom: 10px !important;
    font-size: 0.85em !important;
    font-weight: 500 !important;
    color: #e0e0e0 !important;
    border-bottom: none !important;
    padding-bottom: 3px !important;
}

/* Convert the form-group-column to nutrition-grid */
.edit-ingredient-form .form-group-column {
    display: grid !important;
    grid-template-columns: repeat(auto-fill, minmax(100px, 1fr)) !important;
    gap: 6px !important;
    margin-bottom: 0 !important;
}

/* Style form groups like nutrition items */
.edit-ingredient-form .form-group {
    margin-bottom: 6px !important;
    display: flex !important;
    flex-direction: column !important;
    width: auto !important;
}

/* Style labels like nutrition labels */
.edit-ingredient-form .form-group label {
    font-size: 0.75em !important;
    margin-bottom: 2px !important;
    color: #aaa !important;
    display: block !important;
}

/* Style inputs like nutrition inputs */
.edit-ingredient-form .form-group input {
    width: 50px !important;
    padding: 1px 3px !important;
    height: 20px !important;
    font-size: 0.75em !important;
    background-color: rgba(30, 30, 30, 0.7) !important;
    border: 1px solid rgba(255, 255, 255, 0.1) !important;
    color: #e0e0e0 !important;
    border-radius: 4px !important;
}

/* Make the name field wider */
.edit-ingredient-form .form-group input#edit-ingredient-name {
    width: 140px !important;
}

/* Style the edit form like the detailed nutrition panel */
.edit-ingredient-form {
    margin-top: 8px !important;
    border: 1px solid rgba(255, 255, 255, 0.1) !important;
    border-radius: 4px !important;
    padding: 8px !important;
    background-color: rgba(25, 25, 25, 0.7) !important;
    color: #e0e0e0 !important;
}

/* Style the form header */
.edit-ingredient-form h4 {
    margin-top: 0 !important;
    margin-bottom: 10px !important;
    font-size: 0.85em !important;
    font-weight: 500 !important;
    color: #e0e0e0 !important;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1) !important;
    padding-bottom: 5px !important;
}

/* Style the nutrition sections */
.edit-ingredient-form .nutrition-section {
    margin-bottom: 15px !important;
}

.edit-ingredient-form .nutrition-section h4 {
    margin-top: 0 !important;
    margin-bottom: 10px !important;
    padding-bottom: 5px !important;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1) !important;
    color: #e0e0e0 !important;
    font-weight: 500 !important;
    font-size: 0.85em !important;
}

/* Style the nutrition grid */
.edit-ingredient-form .nutrition-grid {
    display: grid !important;
    grid-template-columns: repeat(auto-fill, minmax(100px, 1fr)) !important;
    gap: 6px !important;
}

/* Style the nutrition items */
.edit-ingredient-form .nutrition-item {
    margin-bottom: 6px !important;
}

/* Style the nutrition labels */
.edit-ingredient-form .nutrition-item label {
    font-size: 0.75em !important;
    margin-bottom: 2px !important;
    color: #aaa !important;
    display: block !important;
}

/* Style the nutrition inputs */
.edit-ingredient-form .nutrition-item input {
    width: 50px !important;
    padding: 1px 3px !important;
    height: 20px !important;
    font-size: 0.75em !important;
    background-color: rgba(30, 30, 30, 0.7) !important;
    border: 1px solid rgba(255, 255, 255, 0.1) !important;
    color: #e0e0e0 !important;
    border-radius: 4px !important;
}

/* Style the form actions */
.edit-ingredient-form .form-actions {
    display: flex !important;
    justify-content: flex-end !important;
    gap: 8px !important;
    margin-top: 8px !important;
}

/* Style the buttons */
.edit-ingredient-form .form-actions button {
    padding: 4px 8px !important;
    font-size: 0.8em !important;
    border-radius: 4px !important;
    border: none !important;
    cursor: pointer !important;
}

/* Style the save button */
.edit-ingredient-form .form-actions .save-changes-btn {
    background-color: #ffffff !important;
    color: #121212 !important;
}

/* Style the cancel button */
.edit-ingredient-form .form-actions .cancel-edit-btn {
    background-color: transparent !important;
    color: #e0e0e0 !important;
    border: 1px solid rgba(255, 255, 255, 0.2) !important;
}
