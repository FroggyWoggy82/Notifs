/**
 * Single Button Fix
 * Ensures there's only one Show Detailed Nutrition button with proper styling
 */

/* Hide all sections except General by default */
.carbohydrates,
.lipids,
.protein,
.vitamins,
.minerals {
    display: none !important;
}

/* Always show the General section */
.general {
    display: block !important;
}

/* Remove any duplicate buttons */
button:not(:first-of-type):contains("Detailed Nutrition") {
    display: none !important;
}

/* Style for the toggle button */
button:contains("Detailed Nutrition") {
    background-color: #ffffff !important;
    color: #121212 !important;
    border: none !important;
    border-radius: 3px !important;
    padding: 5px 10px !important;
    font-size: 0.8em !important;
    cursor: pointer !important;
    margin: 5px !important;
    width: auto !important;
    min-width: 150px !important;
    height: 28px !important;
    display: inline-block !important;
    text-align: center !important;
    transition: all 0.2s ease !important;
}

/* Hover state */
button:contains("Detailed Nutrition"):hover {
    opacity: 0.9 !important;
    transform: translateY(-1px) !important;
}
