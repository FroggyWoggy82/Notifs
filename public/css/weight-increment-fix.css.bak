/**
 * Weight Increment Fix
 * This file contains styles to fix the duplicate X button issue in the Weight Increment section
 */

/* Reset all styling for the weight increment label */
.weight-increment-label {
    background-color: transparent !important;
    border: none !important;
    color: #bbb !important;
    font-size: 0.9rem !important;
    padding: 0 5px !important;
    margin: 0 !important;
    position: static !important;
    top: auto !important;
    right: auto !important;
    width: auto !important;
    height: auto !important;
    display: inline-block !important;
    cursor: default !important;
    text-align: left !important;
    font-weight: normal !important;
    line-height: normal !important;
    z-index: auto !important;
}

/* Ensure no pseudo-elements on the weight increment label */
.weight-increment-label::before,
.weight-increment-label::after {
    content: none !important;
    display: none !important;
}

/* Override the content of the weight increment label to ensure it's exactly "Weight Increment:" */
.weight-increment-label {
    content: "Weight Increment:" !important;
}

/* Force the text content to be exactly "Weight Increment:" */
.weight-increment-label::after {
    content: "" !important;
}

/* Hide any X characters that might be in the label */
.weight-increment-label span,
.weight-increment-label button {
    display: none !important;
}

/* Ensure the weight unit label has the same styling */
.weight-unit-label {
    background-color: transparent !important;
    border: none !important;
    color: #bbb !important;
    font-size: 0.9rem !important;
    padding: 0 5px !important;
    margin: 0 !important;
    position: static !important;
    top: auto !important;
    right: auto !important;
    width: auto !important;
    height: auto !important;
    display: inline-block !important;
    cursor: default !important;
    text-align: left !important;
    font-weight: normal !important;
    line-height: normal !important;
    z-index: auto !important;
}

/* Make sure the X button is only on actual delete buttons */
button.btn-delete-exercise,
button.delete-template-exercise-btn {
    position: absolute !important;
    top: 10px !important;
    right: 10px !important;
    background-color: #f44336 !important;
    color: white !important;
    border: none !important;
    border-radius: 4px !important;
    width: 30px !important;
    height: 30px !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    cursor: pointer !important;
    font-size: 24px !important;
    z-index: 10 !important;
}

/* Direct fix for the X character in the Weight Increment label */
.exercise-options-menu-label label:after,
.exercise-options-menu-label label:before {
    content: none !important;
    display: none !important;
}

/* Hide any X characters that might be in the label text */
.exercise-options-menu-label label:not(.btn):not(.button):not([class*="btn-"]):not([class*="button-"]) {
    background: none !important;
    border: none !important;
    position: static !important;
    font-size: 0.9rem !important;
    color: #bbb !important;
}

/* Ensure the text content is exactly as specified in the data-label attribute */
.exercise-options-menu-label label[data-label]:after {
    content: attr(data-label) !important;
}
