/**
 * Exact Nutrition Match
 * Makes the edit ingredient form match the exact sizing and layout of the detailed nutrition panel
 */

/* Override the edit ingredient form styling */
.edit-ingredient-form {
    margin-top: 8px !important;
    border: 1px solid rgba(255, 255, 255, 0.1) !important;
    border-radius: 4px !important;
    padding: 8px !important;
    background-color: rgba(25, 25, 25, 0.7) !important;
    color: #e0e0e0 !important;
}

/* Override the Basic Information section styling to match other sections */
.edit-ingredient-form .basic-information {
    margin-bottom: 8px !important;
    padding-bottom: 5px !important;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1) !important;
    background-color: rgba(25, 25, 25, 0.7) !important;
    border-radius: 4px !important;
    padding: 8px !important;
}

/* Override the Basic Information header styling */
.edit-ingredient-form .basic-information h4 {
    margin-top: 0 !important;
    margin-bottom: 5px !important;
    padding-bottom: 2px !important;
    border-bottom: none !important;
    color: #e0e0e0 !important;
    font-weight: 500 !important;
    font-size: 0.85em !important;
}

/* Override the Basic Information grid styling */
.edit-ingredient-form .basic-information .nutrition-grid,
.edit-ingredient-form .form-group-column {
    display: grid !important;
    grid-template-columns: repeat(auto-fill, minmax(70px, 1fr)) !important; /* Smaller columns */
    gap: 3px !important; /* Smaller gap */
    margin-bottom: 0 !important;
}

/* Override the Basic Information form group styling */
.edit-ingredient-form .basic-information .form-group,
.edit-ingredient-form .form-group-column .form-group,
.edit-ingredient-form .basic-information .nutrition-item {
    margin-bottom: 2px !important;
    display: flex !important;
    flex-direction: column !important;
    width: auto !important;
}

/* Override the Basic Information label styling */
.edit-ingredient-form .basic-information label,
.edit-ingredient-form .form-group-column .form-group label,
.edit-ingredient-form .basic-information .nutrition-item label {
    font-size: 0.7em !important;
    margin-bottom: 1px !important;
    color: #aaa !important;
    display: block !important;
    white-space: nowrap !important;
    overflow: hidden !important;
    text-overflow: ellipsis !important;
}

/* Override the Basic Information input styling */
.edit-ingredient-form .basic-information input,
.edit-ingredient-form .form-group-column .form-group input,
.edit-ingredient-form .basic-information .nutrition-item input {
    width: 35px !important; /* Even smaller width to match first image */
    padding: 1px 2px !important; /* Smaller padding */
    height: 14px !important; /* Smaller height */
    font-size: 0.6em !important; /* Smaller font */
    background-color: rgba(30, 30, 30, 0.7) !important;
    border: 1px solid rgba(255, 255, 255, 0.1) !important;
    color: #e0e0e0 !important;
    border-radius: 3px !important;
}

/* Make the name field wider */
.edit-ingredient-form .basic-information input#edit-ingredient-name,
.edit-ingredient-form .form-group-column .form-group input#edit-ingredient-name {
    width: 80px !important; /* Slightly smaller to match the compact style */
}

/* Force the Basic Information section to use the same layout as other sections */
.edit-ingredient-form .basic-information {
    display: flex !important;
    flex-direction: column !important;
}

