/**
 * Recipe Header Buttons
 * Styles for the recipe card buttons moved to the header
 */

/* Recipe card header with buttons */
.recipe-card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 15px;
    position: relative;
    height: 60px; /* Fixed height to ensure alignment */
    background-color: transparent;
}

/* Title on the left */
.recipe-card-title {
    margin: 0;
    text-align: left;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    flex: 1;
    max-width: 30%;
}

/* Buttons in the middle */
.recipe-card-header .recipe-card-actions {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 10px;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
}

/* Calories on the right */
.recipe-card-calories {
    margin: 0;
    text-align: right;
    white-space: nowrap;
    display: inline-block;
    width: auto;
}

/* Button styling */
.recipe-card-header .recipe-card-btn {
    min-width: 80px;
    text-align: center;
    background-color: rgba(30, 30, 30, 0.7);
    color: #e0e0e0;
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 6px 12px;
    margin: 0 2px;
    height: 32px;
    line-height: 1.2;
}

.recipe-card-header .recipe-card-btn:hover {
    background-color: rgba(50, 50, 50, 0.7);
    color: #ffffff;
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .recipe-card-header {
        height: auto;
        padding-top: 15px;
        padding-bottom: 15px;
    }

    .recipe-card-title {
        position: absolute;
        top: 15px;
        left: 15px;
        max-width: 40%;
    }

    .recipe-card-header .recipe-card-actions {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .recipe-card-calories {
        position: absolute;
        top: 15px;
        right: 15px;
    }
}

/* Very small screens */
@media (max-width: 480px) {
    .recipe-card-header {
        height: 60px;
    }

    .recipe-card-header .recipe-card-actions {
        width: 100%;
        gap: 5px;
    }

    .recipe-card-header .recipe-card-btn {
        min-width: 70px;
        font-size: 0.85rem;
        padding: 6px 8px;
    }
}
