/*
 * Weight Increment Top Right Fix
 * This file specifically positions the X button in the top right corner of the Weight Increment section
 */

/* Target the X button in the Weight Increment section */
.weight-increment-container button,
.weight-increment-container .btn-delete-exercise,
.weight-increment-container [class*="btn-"],
.weight-increment-container .weight-increment-x-button {
    /* Override any hide rules */
    display: flex !important;
    visibility: visible !important;
    opacity: 1 !important;
    width: 28px !important;
    height: 28px !important;
    overflow: visible !important;
    pointer-events: auto !important;
    z-index: 1000 !important;

    /* Position at the top right */
    position: absolute !important;
    top: 0 !important;
    right: 0 !important;
    bottom: auto !important;
    left: auto !important;

    /* Style the button */
    align-items: center !important;
    justify-content: center !important;
    background-color: #f44336 !important;
    color: white !important;
    border: none !important;
    border-radius: 4px !important;
    font-size: 1.5rem !important;
    font-weight: bold !important;
    cursor: pointer !important;
}

/* Ensure the container has relative positioning */
.weight-increment-container {
    position: relative !important;
}

/* Hide any buttons in the view exercise row */
.view-exercise-row .btn-delete-exercise,
.view-exercise-row [class*="btn-delete"],
.view-exercise-row [class*="btn-remove"] {
    display: none !important;
    visibility: hidden !important;
    opacity: 0 !important;
    width: 0 !important;
    height: 0 !important;
    overflow: hidden !important;
    position: absolute !important;
    pointer-events: none !important;
    z-index: -1 !important;
}

/* Ensure the X button is visible */
.weight-increment-container button::before,
.weight-increment-container .btn-delete-exercise::before,
.weight-increment-container [class*="btn-"]::before,
.weight-increment-container .weight-increment-x-button::before {
    content: none !important;
}

/* Set the content to X */
.weight-increment-container button,
.weight-increment-container .btn-delete-exercise,
.weight-increment-container [class*="btn-"],
.weight-increment-container .weight-increment-x-button {
    content: "Ã—" !important;
}
