/**
 * Bottom Navigation Highlight Position Fix
 * Ensures the highlight line is consistently at the bottom for all pages
 */

/* Force the highlight line to be at the bottom of the nav item */
.bottom-nav .nav-item::before {
    content: '' !important;
    position: absolute !important;
    bottom: 0 !important;
    top: auto !important; /* Override any top positioning */
    left: 0 !important;
    width: 100% !important;
    height: 2px !important;
    transform: translateX(-100%) !important;
    transition: transform 0.3s ease !important;
    opacity: 0 !important;
    z-index: 10 !important; /* Ensure it's above other elements */
}

/* Show the loading line on hover */
.bottom-nav .nav-item:hover::before {
    transform: translateX(0) !important;
    opacity: 1 !important;
}

/* Make the active item's loading line always visible */
.bottom-nav .nav-item.active::before {
    transform: translateX(0) !important;
    opacity: 1 !important;
}

/* Add a subtle glow effect to the loading line */
.bottom-nav .nav-item:hover::before,
.bottom-nav .nav-item.active::before {
    box-shadow: 0 0 8px rgba(255, 255, 255, 0.5) !important;
}
