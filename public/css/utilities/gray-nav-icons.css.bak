/**
 * Gray Navigation Icons
 * Makes all bottom navigation icons gray instead of green when active
 */

/* Override the active item styling */
.nav-item.active {
    color: #9E9E9E !important;
}

.nav-item.active .nav-icon {
    color: #9E9E9E !important;
}

/* Ensure the dumbbell icon is displayed correctly */
.nav-item[href*="workouts.html"] .nav-icon i {
    font-family: "Font Awesome 6 Free", "FontAwesome", sans-serif !important;
    font-weight: 900 !important;
    font-style: normal !important;
    display: inline-block !important;
}

.nav-item[href*="workouts.html"] .nav-icon i::before {
    content: "\f44b" !important; /* fa-dumbbell */
}
