/**
 * Calendar Count Indicator Fix
 * Changes the task and habit count indicators to grey
 */

/* Task count indicator */
.task-count-indicator {
    background-color: rgba(255, 255, 255, 0.2) !important; /* Grey background */
    color: white !important;
    border: 1px solid rgba(255, 255, 255, 0.3) !important;
    box-shadow: 0 0 5px rgba(255, 255, 255, 0.1) !important;
    padding: 2px 6px !important;
    border-radius: 4px !important;
    font-size: 0.7em !important;
    font-weight: 500 !important;
}

/* Habit count indicator */
.habit-count-indicator {
    background-color: rgba(255, 255, 255, 0.2) !important; /* Grey background */
    color: white !important;
    border: 1px solid rgba(255, 255, 255, 0.3) !important;
    box-shadow: 0 0 5px rgba(255, 255, 255, 0.1) !important;
    padding: 2px 6px !important;
    border-radius: 4px !important;
    font-size: 0.7em !important;
    font-weight: 500 !important;
}
