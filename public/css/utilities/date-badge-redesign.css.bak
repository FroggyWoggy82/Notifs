/**
 * Date Badge Redesign
 * Redesigns all date indicators (Overdue, Due Today, Next) to match the Weekly badge style
 */

/* Hide the calendar icon in date indicators */
.due-date-indicator.overdue i,
.due-date-indicator.due-soon i,
.next-occurrence-indicator i,
.next-occurrence-indicator.overdue i,
.next-occurrence-indicator.due-soon i {
    display: none !important;
}

/* Common styling for all date badges */
.due-date-indicator,
.next-occurrence-indicator,
.recurrence-indicator {
    display: inline-flex !important;
    align-items: center !important;
    justify-content: center !important;
    margin-top: 4px !important;
    padding: 3px 6px !important;
    border-radius: 3px !important;
    font-size: 0.7em !important;
    background-color: rgba(0, 0, 0, 0.3) !important;
    box-shadow: none !important;
    font-weight: 500 !important;
    margin-left: 4px !important;
}

/* Style the overdue indicator */
.due-date-indicator.overdue,
.next-occurrence-indicator.overdue {
    color: #FF3D00 !important;
    border: 1px solid rgba(255, 61, 0, 0.3) !important;
}

/* Style the due today indicator */
.due-date-indicator.due-soon,
.next-occurrence-indicator.due-soon {
    color: #FFC107 !important; /* Yellow color for due today */
    border: 1px solid rgba(255, 193, 7, 0.3) !important;
}

/* Style the next occurrence indicator */
.next-occurrence-indicator {
    color: #66BB6A !important; /* Green color for next date */
    border: 1px solid rgba(102, 187, 106, 0.3) !important;
}

/* Add white outline to Weekly badge */
.recurrence-indicator.recurrence-weekly,
.recurrence-indicator.weekly {
    box-shadow: 0 0 0 1px rgba(255, 255, 255, 0.5) !important;
    border: 1px solid rgba(255, 255, 255, 0.3) !important;
}

/* Special styling for next occurrence overdue indicator */
.next-occurrence-overdue {
    color: #FF3D00 !important;
    border: 1px solid rgba(255, 61, 0, 0.3) !important;
}

/* Ensure the text is properly centered without the icon */
.due-date-indicator span,
.next-occurrence-indicator span,
.recurrence-indicator span {
    margin-left: 0 !important;
}
