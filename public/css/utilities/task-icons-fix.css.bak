/**
 * Task Icons Fix
 * Replaces emoji icons with Font Awesome icons for task actions
 */

/* Style the action icons to match the bottom nav */
html body .task-actions .pencil-icon,
html body .task-actions .x-icon {
    font-style: normal !important;
    display: inline-flex !important;
    align-items: center !important;
    justify-content: center !important;
    font-size: 16px !important;
    color: var(--color-gray-500, #9E9E9E) !important;
    opacity: 0.9 !important;
    transition: color 0.2s ease !important;
}

/* Hover effects for the icons */
html body .task-actions .edit-task-btn:hover .pencil-icon {
    color: var(--color-primary, #00E676) !important;
}

html body .task-actions .delete-btn:hover .x-icon {
    color: var(--color-accent, #FF3D00) !important;
}

/* Style the buttons to be transparent */
html body .task-actions .icon-btn {
    background-color: transparent !important;
    border-radius: 50% !important;
    width: 30px !important;
    height: 30px !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    transition: background-color 0.2s ease !important;
    cursor: pointer !important;
}

/* Hover effects for the buttons */
html body .task-actions .edit-task-btn:hover {
    background-color: rgba(0, 230, 118, 0.1) !important;
    transform: scale(1.1) !important;
}

html body .task-actions .delete-btn:hover {
    background-color: rgba(255, 61, 0, 0.1) !important;
    transform: scale(1.1) !important;
}

/* Apply the same styling to habit action buttons */
html body .habit-actions .pencil-icon,
html body .habit-actions .x-icon {
    font-style: normal !important;
    display: inline-flex !important;
    align-items: center !important;
