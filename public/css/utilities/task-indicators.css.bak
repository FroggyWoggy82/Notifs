/* Task Indicators CSS */

/* Due Date Indicator */
.due-date-indicator {
    display: inline-flex;
    align-items: center;
    margin-top: 4px;
    padding: 3px 10px;
    border-radius: 4px;
    font-size: 0.8em;
    background-color: rgba(0, 0, 0, 0.5);
    color: #00E676;
    border: 1px solid rgba(0, 230, 118, 0.5);
    box-shadow: 0 0 8px rgba(0, 230, 118, 0.2);
    font-weight: 500;
}

.due-date-indicator.due-soon {
    background-color: rgba(0, 0, 0, 0.5);
    color: #FFC107;
    border-color: rgba(255, 193, 7, 0.5);
    box-shadow: 0 0 8px rgba(255, 193, 7, 0.2);
}

.due-date-indicator.overdue {
    background-color: rgba(0, 0, 0, 0.5);
    color: #FF3D00;
    border-color: rgba(255, 61, 0, 0.5);
    font-weight: bold;
    box-shadow: 0 0 8px rgba(255, 61, 0, 0.3);
}

/* Special styling for next occurrence overdue indicator */
.next-occurrence-overdue {
    background-color: rgba(0, 0, 0, 0.5);
    color: #FF3D00;
    border-color: rgba(255, 61, 0, 0.5);
    font-weight: bold;
    box-shadow: 0 0 8px rgba(255, 61, 0, 0.3);
}

.due-date-indicator.invalid-date {
    background-color: rgba(0, 0, 0, 0.5);
    color: #BBBBBB;
    border-color: rgba(187, 187, 187, 0.5);
    cursor: pointer;
}

.due-date-indicator i {
    margin-right: 6px;
    font-size: 0.9em;
}

/* Recurrence Type Indicators */
.recurrence-indicator {
    display: inline-flex;
    align-items: center;
    margin-left: 8px;
    padding: 3px 10px;
    border-radius: 4px;
    font-size: 0.75em;
    font-weight: 500;
    background-color: rgba(0, 0, 0, 0.5);
    box-shadow: 0 0 8px rgba(0, 0, 0, 0.2);
}

.recurrence-daily {
    color: #42A5F5;
    border: 1px solid rgba(66, 165, 245, 0.5);
    box-shadow: 0 0 8px rgba(66, 165, 245, 0.2);
}

.recurrence-weekly {
    color: #66BB6A;
    border: 1px solid rgba(102, 187, 106, 0.5);
    box-shadow: 0 0 8px rgba(102, 187, 106, 0.2);
}

.recurrence-monthly {
    color: #AB47BC;
    border: 1px solid rgba(171, 71, 188, 0.5);
    box-shadow: 0 0 8px rgba(171, 71, 188, 0.2);
}

.recurrence-yearly {
    color: #FF9800;
    border: 1px solid rgba(255, 152, 0, 0.5);
    box-shadow: 0 0 8px rgba(255, 152, 0, 0.2);
}

/* Recurrence Icon Styles */
.recurring-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    margin-left: 5px;
    color: #4db6ac;
    font-weight: bold;
    position: relative;
}

.recurring-icon.daily {
    color: #42A5F5;
}

.recurring-icon.weekly {
    color: #66BB6A;
}

.recurring-icon.monthly {
    color: #AB47BC;
}

.recurring-icon.yearly {
    color: #FF9800;
}

/* Interval Badge */
.interval-badge {
    position: absolute;
    top: -6px;
    right: -6px;
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    border-radius: 50%;
    width: 16px;
    height: 16px;
    font-size: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
}

.interval-badge.daily {
    border-color: rgba(66, 165, 245, 0.5);
}

.interval-badge.weekly {
    border-color: rgba(102, 187, 106, 0.5);
}

.interval-badge.monthly {
    border-color: rgba(171, 71, 188, 0.5);
}

.interval-badge.yearly {
    border-color: rgba(255, 152, 0, 0.5);
}

/* Next Occurrence Indicator */
.next-occurrence-indicator {
    display: inline-flex;
    align-items: center;
    margin-top: 4px;
    padding: 3px 10px;
    border-radius: 4px;
    font-size: 0.8em;
    background-color: rgba(0, 0, 0, 0.5);
    color: #66BB6A;
    border: 1px solid rgba(102, 187, 106, 0.5);
    box-shadow: 0 0 8px rgba(102, 187, 106, 0.2);
    margin-left: 4px;
    font-weight: 500;
}

.next-occurrence-indicator.overdue {
    background-color: rgba(0, 0, 0, 0.5);
    color: #FF3D00;
    border-color: rgba(255, 61, 0, 0.5);
    font-weight: bold;
    box-shadow: 0 0 8px rgba(255, 61, 0, 0.3);
}

.next-occurrence-indicator i {
    margin-right: 6px;
    font-size: 0.9em;
}

/* Task Content Enhancements */
.task-content {
    display: flex;
    flex-direction: column;
    gap: 4px;
}

.task-metadata {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    margin-top: 4px;
}

/* Responsive adjustments */
@media (max-width: 480px) {
    .task-metadata {
        flex-direction: column;
        gap: 4px;
    }

    .due-date-indicator,
    .recurrence-indicator,
    .next-occurrence-indicator {
        font-size: 0.7em;
        padding: 1px 5px;
    }
}
