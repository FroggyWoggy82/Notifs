/**
 * Remove Duplicate Form Buttons
 * Removes duplicate Save Changes and Cancel buttons in edit forms
 */

/* Hide all form-actions except the last one - this is a fallback in case JS removal fails */
.edit-ingredient-form .form-actions:not(:last-of-type) {
    display: none !important;
}

/* Make sure the last form-actions is visible */
.edit-ingredient-form .form-actions:last-of-type {
    display: flex !important;
    justify-content: space-between !important;
    margin-top: 15px !important;
}

/* Style the Save Changes button */
.edit-ingredient-form .form-actions:last-of-type button[type="submit"],
.edit-ingredient-form .form-actions:last-of-type .save-ingredient-btn {
    background-color: #333 !important;
    color: white !important;
    border: 1px solid #444 !important;
    border-radius: 3px !important;
    padding: 8px 15px !important;
    cursor: pointer !important;
    transition: background-color 0.2s !important;
}

/* Style the Cancel button */
.edit-ingredient-form .form-actions:last-of-type button[type="button"],
.edit-ingredient-form .form-actions:last-of-type .cancel-edit-btn {
    background-color: #333 !important;
    color: white !important;
    border: 1px solid #444 !important;
    border-radius: 3px !important;
    padding: 8px 15px !important;
    cursor: pointer !important;
    transition: background-color 0.2s !important;
}

/* Hover effect for buttons */
.edit-ingredient-form .form-actions:last-of-type button:hover {
    background-color: #444 !important;
}

/* Hide any buttons outside of form-actions */
.edit-ingredient-form > button:not(.toggle-detailed-nutrition):not(#show-detailed-nutrition-btn) {
    display: none !important;
}

/* Hide any buttons at the very bottom of the form */
.edit-ingredient-form > button.save-ingredient-btn,
.edit-ingredient-form > button.cancel-edit-btn {
    display: none !important;
}

/* More aggressive targeting of duplicate buttons */
.edit-ingredient-form .form-actions:not(:last-of-type) button,
.edit-ingredient-form > .save-ingredient-btn:not(:last-of-type),
.edit-ingredient-form > .cancel-edit-btn:not(:last-of-type) {
    display: none !important;
}
