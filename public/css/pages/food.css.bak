@media (max-width: 768px) {
    /* Ingredient item adjustments */
    .ingredient-item {
        gap: 12px;
        padding: 12px;
    }

    .ingredient-row {
        flex-direction: column;
        align-items: stretch;
    }

    .nutrition-inputs {
