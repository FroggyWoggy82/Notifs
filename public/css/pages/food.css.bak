    }

    /* Calorie target section adjustments */
    .calorie-target-section {
        margin-top: 140px; /* Further increased margin to prevent overlap with chart on mobile */
        padding: 15px;
    }

    /* Chart container adjustments */
    .chart-container {
        margin-bottom: 140px; /* Further increased space after chart on mobile */
        height: 350px; /* Increased height on mobile for better visualization */
        padding-bottom: 80px; /* Extra padding for x-axis labels on mobile */
        padding-left: 10px; /* Reduced side padding on mobile */
        padding-right: 10px;
        /* Add more visible border on mobile to help with visualization */
        border: 1px dashed rgba(200, 200, 200, 0.5);
    }

    /* Scale adjustments for mobile */
    .axis-controls {
        gap: 10px;
        padding: 8px;
    }

    .axis-control {
        min-width: 150px;
    }

    .axis-control label {
        width: 70px;
        font-size: 0.8em;
    }

    .scale-value {
        width: 30px;
        font-size: 0.8em;
    }

    /* Bottom nav adjustments */
    .bottom-nav {
        height: 65px; /* Increase height */
        padding-bottom: 10px; /* Add padding at bottom */
    }

    .bottom-nav .nav-item {
        padding-top: 10px; /* Add padding at top */
    }

    /* Weight goal section adjustments */
    #weight-goal-section {
        padding: 15px;
    }

    .weight-goal-row {
