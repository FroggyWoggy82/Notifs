/*
 * Header Text Fix
 * Centers the "My Tasks" text and removes the gray section
 */

/* Fix the header text positioning */
.container h1.gradient-text {
    text-align: center !important;
    margin: 0 auto !important;
    padding: 15px 0 20px 0 !important;
    font-size: 2.2rem !important;
    width: 100% !important;
    position: relative !important;
    z-index: 5 !important;
}

/* Ensure the menu button doesn't overlap with the text */
.menu-button {
    z-index: 1000 !important;
}

/* Remove the gray status bar section when empty */
#status.status {
    display: none !important;
    margin: 0 !important;
    padding: 0 !important;
    height: 0 !important;
    min-height: 0 !important;
    overflow: hidden !important;
    border: none !important;
    background-color: transparent !important;
}

/* Only show status when it has content */
#status.status:not(:empty) {
    display: block !important;
    margin: var(--spacing-md) 0 !important;
    padding: var(--spacing-sm) var(--spacing-md) !important;
    height: auto !important;
}

/* Reduce space between header and first section */
.task-list-section {
    margin-top: 0 !important;
}

/* Adjust container spacing */
.container {
    padding-top: 0 !important;
}

/* Remove any background from the header area */
body {
    background-color: var(--color-dark-bg) !important;
}

/* Ensure proper spacing between elements */
section {
    margin-bottom: 15px !important;
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .container h1.gradient-text {
        font-size: 1.8rem !important;
        padding: 10px 0 15px 0 !important;
    }
}
