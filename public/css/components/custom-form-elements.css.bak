/* Custom Form Elements Styling */

/* ===== Custom File Input ===== */
.custom-file-input {
    position: relative;
    display: inline-block;
    width: 100%;
}

.custom-file-input input[type="file"] {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    width: 100%;
    height: 100%;
    cursor: pointer;
    z-index: 2;
}

.custom-file-button {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #03dac6; /* Teal accent color */
    color: #121212; /* Dark text */
    border: none;
    border-radius: 4px;
    padding: 12px 15px;
    font-size: 0.95em;
    font-weight: 500;
    cursor: pointer;
    width: 100%;
    transition: background-color 0.2s ease, transform 0.1s ease;
    box-sizing: border-box;
    text-align: center;
}

.custom-file-button:hover {
    background-color: #01c4b3; /* Slightly darker on hover */
}

.custom-file-button:active {
    transform: scale(0.98); /* Subtle press effect */
}

.custom-file-button i {
    margin-right: 8px;
}

.file-name-display {
    margin-top: 8px;
    font-size: 0.85em;
    color: #566573;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

/* ===== Custom Date Input ===== */
.custom-date-input {
    position: relative;
    display: inline-block;
    width: 100%;
}

.custom-date-input input[type="date"] {
    width: 100%;
    padding: 12px 15px;
    border: 2px solid #03dac6; /* Teal border */
    border-radius: 4px;
    background-color: #ffffff;
    color: #2c3e50;
    font-size: 0.95em;
    box-sizing: border-box;
    cursor: pointer;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
    appearance: none; /* Remove default styling */
    -webkit-appearance: none;
    -moz-appearance: none;
}

.custom-date-input input[type="date"]::-webkit-calendar-picker-indicator {
    color: #03dac6;
    opacity: 1;
    cursor: pointer;
}

.custom-date-input input[type="date"]:focus {
    outline: none;
    border-color: #01c4b3;
    box-shadow: 0 0 0 2px rgba(3, 218, 198, 0.2);
}

.custom-date-input::after {
    content: "ðŸ“…";
    position: absolute;
    top: 50%;
    right: 12px;
    transform: translateY(-50%);
    pointer-events: none;
    font-size: 1.2em;
    color: #03dac6;
}

/* ===== Upload Button ===== */
.upload-button {
    background-color: #03dac6;
    color: #121212;
    border: none;
    border-radius: 4px;
    padding: 14px 20px;
    font-size: 1em;
    font-weight: 600;
    cursor: pointer;
    width: 100%;
    margin-top: 20px;
    transition: background-color 0.2s ease, transform 0.1s ease;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.upload-button:hover {
    background-color: #01c4b3;
    box-shadow: 0 3px 7px rgba(0, 0, 0, 0.15);
}

.upload-button:active {
    transform: scale(0.98);
}

/* ===== Modal Header ===== */
.modal-content h2 {
    color: #03dac6;
    text-align: center;
    margin-bottom: 20px;
    font-weight: 600;
}

/* ===== Form Group Spacing ===== */
.form-group {
    margin-bottom: 20px;
}

.form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 500;
    color: #2c3e50;
}
