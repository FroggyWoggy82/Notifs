/* Dark theme styling for ingredient section buttons */

/* Make the Ingredients heading white */
#recipe-creation-section h3,
#recipes-display-section h2 {
    color: #ffffff !important;
    font-weight: 500;
    margin-top: 30px;
    margin-bottom: 15px;
}

/* Unified button styling for all ingredient buttons */
.toggle-detailed-nutrition,
.add-ingredient-btn-inline,
.remove-ingredient-btn,
.cronometer-parse-button {
    background-color: rgba(30, 30, 30, 0.7) !important;
    color: #e0e0e0 !important;
    border: 1px solid rgba(255, 255, 255, 0.1) !important;
    border-radius: 4px !important;
    padding: 8px 15px !important;
    cursor: pointer !important;
    font-size: 0.9em !important;
    transition: background-color 0.3s !important;
    font-weight: 500 !important;
    height: 38px !important;
    line-height: 1.2 !important;
}

/* Hover state for all buttons */
.toggle-detailed-nutrition:hover,
.add-ingredient-btn-inline:hover,
.remove-ingredient-btn:hover,
.cronometer-parse-button:hover {
    background-color: rgba(50, 50, 50, 0.9) !important;
    border-color: rgba(255, 255, 255, 0.2) !important;
}

/* Active state for toggle button */
.toggle-detailed-nutrition.active {
    background-color: rgba(40, 40, 40, 0.9) !important;
    border-color: rgba(255, 255, 255, 0.3) !important;
}

/* Save Recipe button */
#create-recipe-form button[type="submit"] {
    background-color: rgba(30, 30, 30, 0.7) !important;
    color: #e0e0e0 !important;
    border: 1px solid rgba(255, 255, 255, 0.1) !important;
    border-radius: 4px !important;
    padding: 10px 20px !important;
    cursor: pointer !important;
    font-size: 1em !important;
    transition: background-color 0.3s !important;
    font-weight: 500 !important;
    margin-top: 20px !important;
}

#create-recipe-form button[type="submit"]:hover {
    background-color: rgba(50, 50, 50, 0.9) !important;
    border-color: rgba(255, 255, 255, 0.2) !important;
}

/* Recipe card buttons styling */
.recipe-card-btn,
.recipe-card-btn.primary,
.recipe-card-btn.danger {
    background-color: rgba(30, 30, 30, 0.7) !important;
    color: #e0e0e0 !important;
    border: 1px solid rgba(255, 255, 255, 0.1) !important;
    border-radius: 4px !important;
    padding: 8px 15px !important;
    cursor: pointer !important;
    font-size: 0.9em !important;
    transition: background-color 0.3s !important;
    font-weight: 500 !important;
    height: 38px !important;
    line-height: 1.2 !important;
    box-shadow: none !important;
    width: 90px !important;
}

/* Hover state for recipe card buttons */
.recipe-card-btn:hover,
.recipe-card-btn.primary:hover,
.recipe-card-btn.danger:hover {
    background-color: rgba(50, 50, 50, 0.9) !important;
    border-color: rgba(255, 255, 255, 0.2) !important;
    transform: none !important;
    box-shadow: none !important;
}

/* Recipe card calories styling */
.recipe-card-calories {
    color: #ffffff !important;
    background-color: rgba(30, 30, 30, 0.7) !important;
    border: 1px solid rgba(255, 255, 255, 0.1) !important;
    padding: 6px 12px !important;
    border-radius: 4px !important;
    font-weight: 500 !important;
}
