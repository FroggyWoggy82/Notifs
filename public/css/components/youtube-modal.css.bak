/* YouTube URL Modal Specific Styles */
#youtube-url-modal {
    z-index: 10000 !important; /* Ensure it's above everything else */
}

#youtube-url-modal .modal-content {
    background-color: #2a2a2a !important;
    border: 2px solid #03dac6 !important;
    box-shadow: 0 0 20px rgba(3, 218, 198, 0.3) !important;
}

#youtube-url-modal h3 {
    color: #03dac6 !important;
    margin-top: 0 !important;
    margin-bottom: 15px !important;
}

#youtube-url-input {
    width: 100% !important;
    padding: 10px !important;
    margin: 10px 0 20px 0 !important;
    background-color: #333 !important;
    border: 1px solid #555 !important;
    color: white !important;
    border-radius: 4px !important;
}

#youtube-url-input:focus {
    border-color: #03dac6 !important;
    outline: none !important;
    box-shadow: 0 0 5px rgba(3, 218, 198, 0.5) !important;
}

#youtube-url-modal .modal-buttons {
    display: flex !important;
    justify-content: flex-end !important;
    gap: 10px !important;
    margin-top: 15px !important;
}

#save-youtube-url {
    background-color: #03dac6 !important;
    color: #000 !important;
}

#save-youtube-url:hover {
    background-color: #00b3a6 !important;
}
