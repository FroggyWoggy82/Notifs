/* Section separator styling */
#recipe-creation-section {
    margin-top: 60px;
    padding-top: 20px;
    border-top: 1px solid #333;
    position: relative;
}

/* Add more space between sections */
section + section {
    margin-top: 40px;
}

/* Make section headers more prominent */
.section-header-compact {
    margin-bottom: 20px;
    padding-bottom: 10px;
    border-bottom: 1px solid #333;
}

/* Ensure proper spacing after weight goal section */
#weight-goal-section {
    margin-bottom: 60px;
}
