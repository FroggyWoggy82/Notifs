/* X Button Position Fix CSS */

/* Position the X button at the bottom right next to the pencil icon */
.exercise-options-menu .btn-delete-exercise {
    position: absolute !important;
    bottom: 10px !important;
    right: 45px !important; /* Position to the left of the pencil icon */
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    width: 28px !important;
    height: 28px !important;
    background-color: #f44336 !important;
    color: white !important;
    border: none !important;
    border-radius: 4px !important;
    font-size: 1.5rem !important;
    font-weight: bold !important;
    cursor: pointer !important;
    z-index: 1000 !important;
    visibility: visible !important;
    opacity: 1 !important;
}

/* Ensure the button is visible */
.exercise-options-menu .btn-delete-exercise::before {
    content: none !important;
}

/* Style the X character */
.exercise-options-menu .btn-delete-exercise {
    font-size: 1.5rem !important;
    line-height: 1 !important;
}

/* Button hover effect */
.exercise-options-menu .btn-delete-exercise:hover {
    background-color: #d32f2f !important;
}

/* Ensure the pencil icon (edit button) is positioned correctly */
.exercise-options-menu .btn-edit-exercise {
    position: absolute !important;
    bottom: 10px !important;
    right: 10px !important;
}
