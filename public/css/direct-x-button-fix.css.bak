/**
 * Direct X Button Fix
 * This file contains targeted CSS to remove X buttons from the Weight Increment section
 * while preserving necessary buttons
 */

/* Only target X buttons in the Weight Increment label */
.exercise-options-menu-label .weight-increment-label button,
.exercise-options-menu-label .weight-increment-container button,
.exercise-options-menu-label .weight-increment-text button {
    display: none !important;
    visibility: hidden !important;
    opacity: 0 !important;
    position: absolute !important;
    top: -9999px !important;
    left: -9999px !important;
    z-index: -1 !important;
    pointer-events: none !important;
}

/* Ensure the main delete button is visible */
.exercise-options-menu .button-group-right .btn-delete-exercise {
    display: flex !important;
    visibility: visible !important;
    opacity: 1 !important;
    position: static !important;
    top: auto !important;
    left: auto !important;
    z-index: auto !important;
    pointer-events: auto !important;
    color: #f44336 !important;
    font-size: 1.3rem !important;
    font-family: Arial, sans-serif !important; /* Use a standard font for the X character */
    line-height: 1 !important;
    text-align: center !important;
    justify-content: center !important;
    align-items: center !important;
}

/* Fix the X character display - using a different character */
.exercise-options-menu .button-group-right .btn-delete-exercise {
    position: relative !important;
    overflow: visible !important;
}

/* First attempt: Use a different Unicode character */
.exercise-options-menu .button-group-right .btn-delete-exercise::before {
    content: "\2715" !important; /* Unicode for multiplication X (âœ•) */
    display: inline-block !important;
}

/* Second attempt: Create an X using CSS */
.exercise-options-menu .button-group-right .btn-delete-exercise::after {
    content: "" !important;
    position: absolute !important;
    top: 50% !important;
    left: 50% !important;
    width: 16px !important;
    height: 16px !important;
    transform: translate(-50%, -50%) !important;
    background:
        linear-gradient(45deg, transparent 45%, #f44336 45%, #f44336 55%, transparent 55%),
        linear-gradient(135deg, transparent 45%, #f44336 45%, #f44336 55%, transparent 55%) !important;
    opacity: 0 !important; /* Hidden by default, will be shown if needed via JavaScript */
}

/* Ensure the edit button is visible */
.exercise-options-menu .button-group-right .btn-edit-exercise-name {
    display: flex !important;
    visibility: visible !important;
    opacity: 1 !important;
    position: static !important;
    top: auto !important;
    left: auto !important;
    z-index: auto !important;
    pointer-events: auto !important;
    color: #03dac6 !important;
    font-size: 1.1rem !important;
}

/* Ensure the View Exercise button is visible */
.exercise-options-menu .btn-view-exercise {
    display: flex !important;
    visibility: visible !important;
    opacity: 1 !important;
    position: static !important;
    top: auto !important;
    left: auto !important;
    z-index: auto !important;
    pointer-events: auto !important;
    background-color: #03dac6 !important;
    color: #000 !important;
}

/* Ensure the Weight Increment label has the correct text */
.exercise-options-menu-label .weight-increment-label,
.exercise-options-menu-label .weight-increment-text,
.exercise-options-menu-label .weight-increment-container {
    content: "Weight Increment:" !important;
    background: none !important;
    border: none !important;
    position: static !important;
    top: auto !important;
    right: auto !important;
    color: #bbb !important;
    font-size: 0.9rem !important;
    padding: 0 5px !important;
    margin: 0 !important;
    display: inline-block !important;
    cursor: default !important;
    text-align: left !important;
    font-weight: normal !important;
    line-height: normal !important;
}
