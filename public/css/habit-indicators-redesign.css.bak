/**
 * Habit Indicators Redesign
 * Improves the design of progress badges and level indicators
 */

/* Redesigned progress badges */
.habit-progress-container,
.habit-progress {
    background-color: rgba(20, 20, 20, 0.6) !important;
    color: rgba(255, 255, 255, 0.9) !important;
    border: 1px solid rgba(255, 255, 255, 0.1) !important;
    box-shadow: none !important;
    border-radius: 6px !important;
    padding: 6px 12px !important;
    font-size: 0.85rem !important;
    font-weight: 500 !important;
    letter-spacing: 0.5px !important;
    min-width: 60px !important;
    text-align: center !important;
    transition: all 0.2s ease !important;
}

/* Hover effect for progress badges */
.habit-progress-container:hover,
.habit-progress:hover {
    background-color: rgba(30, 30, 30, 0.8) !important;
    border-color: rgba(255, 255, 255, 0.2) !important;
}

/* Redesigned level indicators with gradient backgrounds */
.habit-level {
    background: linear-gradient(135deg, rgba(20, 20, 20, 0.8), rgba(40, 40, 40, 0.8)) !important;
    color: rgba(255, 255, 255, 0.9) !important;
    border: none !important;
    box-shadow: 0 0 0 1px rgba(255, 255, 255, 0.1) !important;
    border-radius: 6px !important;
    padding: 6px 12px !important;
    font-size: 0.85rem !important;
    font-weight: 500 !important;
    letter-spacing: 0.5px !important;
    min-width: 80px !important;
    text-align: center !important;
    transition: all 0.2s ease !important;
}

/* Hover effect for level indicators */
.habit-level:hover {
    box-shadow: 0 0 0 1px rgba(255, 255, 255, 0.2) !important;
}

/* Level-specific styling with subtle color accents */
/* Handle all possible level classes */

/* Level 0 */
.habit-level.level-0 {
    background: linear-gradient(135deg, rgba(20, 20, 20, 0.8), rgba(40, 40, 40, 0.8)) !important;
    border-left: 3px solid rgba(150, 150, 150, 0.5) !important;
}

/* Levels 1-5 */
.habit-level.level-1,
.habit-level.level-2,
.habit-level.level-3,
.habit-level.level-4,
.habit-level.level-5,
.habit-level.level-beginner {
    background: linear-gradient(135deg, rgba(20, 20, 20, 0.8), rgba(40, 40, 40, 0.8)) !important;
    border-left: 3px solid rgba(0, 191, 165, 0.5) !important;
}

/* Levels 6-10 */
.habit-level.level-6,
.habit-level.level-7,
.habit-level.level-8,
.habit-level.level-9,
.habit-level.level-10,
.habit-level.level-intermediate {
    background: linear-gradient(135deg, rgba(20, 20, 20, 0.8), rgba(40, 40, 40, 0.8)) !important;
    border-left: 3px solid rgba(33, 150, 243, 0.5) !important;
}

/* Levels 11-20 */
.habit-level.level-11,
.habit-level.level-12,
.habit-level.level-13,
.habit-level.level-14,
.habit-level.level-15,
.habit-level.level-16,
.habit-level.level-17,
.habit-level.level-18,
.habit-level.level-19,
.habit-level.level-20,
.habit-level.level-advanced {
    background: linear-gradient(135deg, rgba(20, 20, 20, 0.8), rgba(40, 40, 40, 0.8)) !important;
    border-left: 3px solid rgba(156, 39, 176, 0.5) !important;
}

/* Levels 21+ */
.habit-level.level-21,
.habit-level.level-22,
.habit-level.level-23,
.habit-level.level-24,
.habit-level.level-25,
.habit-level.level-expert,
.habit-level.level-master {
    background: linear-gradient(135deg, rgba(20, 20, 20, 0.8), rgba(40, 40, 40, 0.8)) !important;
    border-left: 3px solid rgba(255, 152, 0, 0.5) !important;
}

/* Improve spacing between indicators */
.habit-indicators-row {
    gap: 10px !important;
    align-items: center !important;
    justify-content: flex-end !important;
}

/* Ensure consistent sizing */
.habit-progress-container,
.habit-level {
    height: 32px !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
}

/* Remove any additional borders or outlines from parent containers */
.habit-indicators-row > div {
    border: none !important;
    box-shadow: none !important;
    background: none !important;
}

/* Ensure the progress container doesn't have a border */
.habit-progress-container {
    border: none !important;
    padding: 0 !important;
    margin: 0 !important;
    background: none !important;
}

/* Only the actual progress element should have styling */
.habit-progress {
    width: 100% !important;
    height: 100% !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
}
