/**
 * Recipe Buttons Dark Fix
 * Fixes the styling of the buttons in the recipe edit modal
 */

/* Primary buttons (Save, Submit, etc.) */
.btn-primary,
.btn-success,
button[type="submit"],
.save-btn,
.submit-btn {
    background-color: #ffffff !important;
    color: #121212 !important;
    border: none !important;
    border-radius: 4px !important;
    padding: 8px 16px !important;
    font-weight: normal !important;
    transition: all 0.2s ease !important;
    box-shadow: 0 2px 5px rgba(255, 255, 255, 0.2) !important;
}

/* Primary buttons hover */
.btn-primary:hover,
.btn-success:hover,
button[type="submit"]:hover,
.save-btn:hover,
.submit-btn:hover {
    transform: translateY(-2px) !important;
    box-shadow: 0 4px 8px rgba(255, 255, 255, 0.3) !important;
}

/* Secondary buttons (Cancel, Close, etc.) */
.btn-secondary,
.btn-danger,
.cancel-btn,
.close-btn {
    background-color: rgba(30, 30, 30, 0.7) !important;
    color: #ffffff !important;
    border: 1px solid rgba(255, 255, 255, 0.1) !important;
    border-radius: 4px !important;
    padding: 8px 16px !important;
    font-weight: normal !important;
    transition: all 0.2s ease !important;
}

/* Secondary buttons hover */
.btn-secondary:hover,
.btn-danger:hover,
.cancel-btn:hover,
.close-btn:hover {
    background-color: rgba(50, 50, 50, 0.9) !important;
    border-color: rgba(255, 255, 255, 0.2) !important;
}

/* Button groups */
.btn-group {
    display: flex !important;
    gap: 10px !important;
}

